require 'fileutils'
require 'pathname'
require 'rbconfig'
include Config

if CONFIG['arch'] =~ /mswin/
    platform = 'windows'
else
    platform = 'darwin'
end
bpVersion = "<%= $cmake["VersionString"] %>"
updatePkgName = "BrowserPlus_#{bpVersion}.bpkg"

puts "installing locally..."
$topDir = File.dirname(File.dirname(File.dirname(File.expand_path(__FILE__))))
installerExe = File.join($topDir, "build", "#{bpVersion}_#{platform}",
                         "work", "install", "BrowserPlusInstaller")
updatePkg = File.join($topDir, "build", updatePkgName)
if CONFIG['arch'] =~ /mswin/
    installerExe.gsub!(/\//, '\\')
    updatePkg.gsub!(/\//, '\\')
end

updateCmd = "#{installerExe} -nogui=1 -verbose=1 -pkg=#{updatePkg}"
puts updateCmd
if system(updateCmd)
    puts "BrowserPlusInstaller succeeded"
else
    puts "BrowserPlusInstaller failed with exitstatus " + $?.to_s
end

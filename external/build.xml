<project name="BrowserPlusPlatform_external" default="build">
    <target name="clean">
        <exec executable="ruby" failonerror="true">
            <arg line="./build.rb clean" />
        </exec>
    </target>
    <target name="clean_make" depends="clean" />
    <target name="clean_xcode" depends="clean" />
    <target name="clean_vc08" >
        <delete file="x1.bat" />
        <echo file="x1.bat">call "C:\Program Files\Microsoft Visual Studio 9.0\vc\bin\vcvars32.bat"
if not %WINTEMP%*==* set TEMP=%WINTEMP%
if not %WINTMP%*==* set TMP=%WINTMP%
ruby .\build.rb clean
        </echo>
        <exec executable="cmd" failonerror="true">
            <arg line="/C x1.bat" />
        </exec>
        <delete file="x1.bat" />
    </target>
    <target name="build">
        <exec executable="ruby" failonerror="true">
            <arg line="./build.rb" />
        </exec>
    </target>
    <target name="build_make" depends="build" />
    <target name="build_xcode" depends="build" />
    <target name="build_vc08">
        <delete file="x1.bat" />
        <echo file="x1.bat">call "C:\Program Files\Microsoft Visual Studio 9.0\vc\bin\vcvars32.bat"
if not %WINTEMP%*==* set TEMP=%WINTEMP%
if not %WINTMP%*==* set TMP=%WINTMP%
ruby .\build.rb
        </echo>
        <exec executable="cmd" failonerror="true">
            <arg line="/C x1.bat" />
        </exec>
        <delete file="x1.bat" />
    </target>
</project>
